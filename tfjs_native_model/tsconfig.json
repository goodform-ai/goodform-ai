{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        },
        "lib": ["es2017", "dom"],
        "skipLibCheck": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
